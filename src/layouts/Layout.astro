---
import "../styles/global.css";

interface Props {
	title: string;
	dbName?: string;
}

const { title, dbName } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Kobo Annotations Export" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
			rel="stylesheet"
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<script is:inline>
			// Inmediate theme initialization to prevent flash
			(function () {
				const savedTheme = localStorage.getItem("theme") || "dark";
				document.documentElement.setAttribute("data-theme", savedTheme);
			})();
		</script>
	</head>
	<body>
		<header class="sticky-header">
			<div class="container header-content">
				<div style="display: flex; align-items: center; gap: 0.75rem;">
					<slot name="back-button" />
					<a href={dbName ? `/${dbName}/` : "/"} class="site-title">
						<img
							src="/favicon.svg"
							alt="Kobo Annotations"
							style="width: 1.5rem; height: 1.5rem;"
						/>
						Kobo Annotations
					</a>
					<slot name="header-title" />
				</div>
				<button
					id="theme-toggle"
					style="background: none; border: none; cursor: pointer; font-size: 1.25rem; color: var(--text-secondary);"
				>
					ðŸŒ™
				</button>
			</div>
		</header>

		<main class="container">
			<slot />
		</main>

		<footer
			class="container"
			style="text-align: center; color: var(--text-secondary); font-size: 0.875rem; margin-top: 3rem;"
		>
			<p>Exported with Astro & Bun</p>
		</footer>

		<script is:inline>
			// Theme Toggle Handler
			const toggle = document.getElementById("theme-toggle");
			const root = document.documentElement;

			const updateToggleText = (theme) => {
				toggle.textContent = theme === "dark" ? "â˜€ï¸" : "ðŸŒ™";
			};

			// Initialize toggle button state
			const currentTheme = root.getAttribute("data-theme");
			updateToggleText(currentTheme);

			// Toggle Handler
			toggle.addEventListener("click", () => {
				const current = root.getAttribute("data-theme");
				const next = current === "dark" ? "light" : "dark";

				root.setAttribute("data-theme", next);
				localStorage.setItem("theme", next);
				updateToggleText(next);
			});
		</script>
	</body>
</html>
