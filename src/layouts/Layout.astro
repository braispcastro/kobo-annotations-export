---
import "../styles/global.css";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Kobo Annotations Export" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class="container" style="padding-bottom: 0; display: flex; justify-content: space-between; align-items: center;">
			<a href="/" style="font-size: 1.5rem; font-weight: 700; color: var(--heading-color);">ðŸ“š Kobo Annotations</a>
            <button id="theme-toggle" style="background: none; border: none; cursor: pointer; font-size: 1.25rem; color: var(--text-secondary);">
                ðŸŒ™
            </button>
		</header>
		
		<main class="container">
			<slot />
		</main>

		<footer class="container" style="text-align: center; color: var(--text-secondary); font-size: 0.875rem; margin-top: 3rem;">
			<p>Exported with Astro & Bun</p>
		</footer>

        <script is:inline>
            // Theme Toggle Logic
            const toggle = document.getElementById('theme-toggle');
            const root = document.documentElement;
            
            // Function to set theme
            const setTheme = (theme) => {
                root.setAttribute('data-theme', theme);
                localStorage.setItem('theme', theme);
                toggle.textContent = theme === 'dark' ? 'â˜€ï¸' : 'ðŸŒ™';
            };

            // Check preference
            const savedTheme = localStorage.getItem('theme') || 'dark'; // Default to dark
            setTheme(savedTheme);

            // Toggle Handler
            toggle.addEventListener('click', () => {
                const current = root.getAttribute('data-theme');
                setTheme(current === 'dark' ? 'light' : 'dark');
            });
        </script>
	</body>
</html>
