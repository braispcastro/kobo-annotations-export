---
import Layout from "../../../layouts/Layout.astro";
import { getGroupedAnnotations } from "../../../db";

const { dbName, author, book } = Astro.params;

if (!dbName || !author || !book) {
    return Astro.redirect("/");
}

const tree = getGroupedAnnotations(dbName);
const annotations = tree[author]?.[book];

if (!annotations) {
    return Astro.redirect(`/${dbName}/${author}/`);
}

const colorMap: Record<string, string> = {
    "3": "var(--highlight-green)",
    "2": "var(--highlight-blue)",
    "1": "var(--highlight-pink)",
    "0": "var(--highlight-yellow)",
};

const bgMap: Record<string, string> = {
    "3": "var(--highlight-green-bg)",
    "2": "var(--highlight-blue-bg)",
    "1": "var(--highlight-pink-bg)",
    "0": "var(--highlight-yellow-bg)",
};
---

<Layout title={`${book} | Annotations`} dbName={dbName}>
    <a
        slot="back-button"
        href={`/${dbName}/${author}/`}
        style="font-size: 1.25rem; text-decoration: none; color: var(--text-secondary);"
        title={`Back to ${author}`}>&larr;</a
    >
    <span slot="header-title" class="header-context">{book}</span>

    <h1 style="margin-bottom: 0.15rem;">{book}</h1>
    <p style="color: var(--text-secondary); margin-bottom: 2rem;">
        by {author}
    </p>

    <div class="filters-container">
        <div class="filter-group">
            <span class="filter-label">Type</span>
            <div class="filter-buttons" id="type-filters">
                <button
                    id="filter-all-types"
                    class="filter-btn active"
                    data-type="all">All</button
                >
                <button
                    id="filter-highlights"
                    class="filter-btn"
                    data-type="highlight">Highlights</button
                >
                <button id="filter-notes" class="filter-btn" data-type="note"
                    >Notes</button
                >
                <button
                    id="filter-markups"
                    class="filter-btn"
                    data-type="markup">Markups</button
                >
            </div>
        </div>
        <div class="filter-group">
            <span class="filter-label">Color</span>
            <div class="filter-buttons" id="color-filters">
                <button
                    id="filter-all-colors"
                    class="filter-btn active"
                    data-color="all">All</button
                >
                <button
                    id="filter-color-yellow"
                    class="filter-btn color-dot yellow"
                    data-color="0"
                    title="Yellow"></button>
                <button
                    id="filter-color-pink"
                    class="filter-btn color-dot pink"
                    data-color="1"
                    title="Pink"></button>
                <button
                    id="filter-color-blue"
                    class="filter-btn color-dot blue"
                    data-color="2"
                    title="Blue"></button>
                <button
                    id="filter-color-green"
                    class="filter-btn color-dot green"
                    data-color="3"
                    title="Green"></button>
            </div>
        </div>
    </div>

    <div class="annotations">
        {
            annotations.map((annot) => {
                const colorKey =
                    annot.Type === "markup"
                        ? "none"
                        : annot.Color !== null && annot.Color !== undefined
                          ? String(annot.Color)
                          : "none";

                let borderColor = colorMap[colorKey] || "var(--border-color)";
                let bgColor = bgMap[colorKey] || "rgba(255,255,255,0.02)";

                if (annot.Type === "markup") {
                    borderColor = "var(--highlight-markup)";
                    bgColor = "var(--highlight-markup-bg)";
                }

                return (
                    <div
                        class="card annotation-card"
                        data-type={annot.Type}
                        data-color={colorKey}
                        style={`border-left: 4px solid ${borderColor}; background: ${bgColor};`}
                    >
                        <div style="margin-bottom: 0.75rem;">
                            <span style="text-transform: uppercase; font-size: 0.65rem; font-weight: 700; letter-spacing: 0.05em; opacity: 0.6; border: 1px solid var(--text-primary); padding: 2px 6px; border-radius: 4px;">
                                {annot.Type}
                            </span>
                        </div>
                        {annot.Type === "markup" && (
                            <div
                                class="markup-container"
                                style="margin-bottom: 2rem; border-radius: 8px; overflow: hidden; background: var(--border-color); position: relative; width: 100%; line-height: 0;"
                            >
                                <img
                                    src={`/api/markups/${dbName}/${annot.BookmarkID}.jpg`}
                                    alt="Page screenshot"
                                    style="width: 100%; height: auto; display: block;"
                                    loading="lazy"
                                />
                                {/* Annotation Overlay (SVG) */}
                                <img
                                    src={`/api/markups/${dbName}/${annot.BookmarkID}.svg`}
                                    alt="Handwritten notes"
                                    style="position: absolute; top: 0; left: 0; width: 100%; height: auto; mix-blend-mode: multiply; pointer-events: none;"
                                    loading="lazy"
                                />
                            </div>
                        )}

                        {annot.Text && (
                            <blockquote style="border: none; background: transparent; padding: 0; margin-bottom: 1rem; font-style: italic;">
                                "{annot.Text.trim()}"
                            </blockquote>
                        )}

                        {annot.Annotation && (
                            <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid rgba(255,255,255,0.1);">
                                <strong style="color: var(--accent); display: block; margin-bottom: 0.25rem;">
                                    Note:
                                </strong>
                                {annot.Annotation}
                            </div>
                        )}

                        <div class="annot-footer">
                            <div class="footer-left">
                                {annot.ChapterTitle && (
                                    <div class="chapter-title">
                                        {annot.ChapterTitle}
                                    </div>
                                )}

                                {annot.ChapterProgress > 0 && (
                                    <div
                                        class="progress-wrapper"
                                        title={`Chapter Progress: ${Math.round(annot.ChapterProgress * 100)}%`}
                                    >
                                        <div class="progress-bar-bg">
                                            <div
                                                class="progress-bar-fill"
                                                style={`width: ${Math.round(annot.ChapterProgress * 100)}%; background: ${borderColor};`}
                                            />
                                        </div>
                                        <span class="progress-text">
                                            {Math.round(
                                                annot.ChapterProgress * 100,
                                            )}
                                            %
                                        </span>
                                    </div>
                                )}
                            </div>

                            <div class="footer-right">
                                <div title="Created">
                                    <span style="margin-right: 4px;">ðŸ“…</span>
                                    {(() => {
                                        let d = annot.DateCreated;
                                        if (d && !d.endsWith("Z")) d += "Z";
                                        return new Date(d).toLocaleDateString(
                                            undefined,
                                            {
                                                year: "numeric",
                                                month: "short",
                                                day: "numeric",
                                                hour: "2-digit",
                                                minute: "2-digit",
                                            },
                                        );
                                    })()}
                                </div>
                            </div>
                        </div>
                    </div>
                );
            })
        }
    </div>

    <script is:inline>
        const typeButtons = document.querySelectorAll(
            "#type-filters .filter-btn",
        );
        const colorButtons = document.querySelectorAll(
            "#color-filters .filter-btn",
        );
        const cards = document.querySelectorAll(".annotation-card");

        let activeType = "all";
        let activeColor = "all";

        function filterCards() {
            cards.forEach((card) => {
                const type = card.getAttribute("data-type");
                const color = card.getAttribute("data-color");
                const typeMatch = activeType === "all" || type === activeType;
                const colorMatch =
                    activeColor === "all" || color === activeColor;
                card.style.display = typeMatch && colorMatch ? "block" : "none";
            });
        }

        typeButtons.forEach((btn) => {
            btn.addEventListener("click", () => {
                typeButtons.forEach((b) => b.classList.remove("active"));
                btn.classList.add("active");
                activeType = btn.getAttribute("data-type");
                filterCards();
            });
        });

        colorButtons.forEach((btn) => {
            btn.addEventListener("click", () => {
                colorButtons.forEach((b) => b.classList.remove("active"));
                btn.classList.add("active");
                activeColor = btn.getAttribute("data-color");
                filterCards();
            });
        });

        // Scroll logic for filters
        const filtersContainer = document.querySelector(".filters-container");
        let lastScrollY = window.scrollY;

        window.addEventListener(
            "scroll",
            () => {
                const currentScrollY = window.scrollY;

                if (currentScrollY <= 10) {
                    // At the top
                    filtersContainer.classList.remove("filters-hidden");
                } else if (
                    currentScrollY > lastScrollY &&
                    currentScrollY > 100
                ) {
                    // Scrolling down
                    filtersContainer.classList.add("filters-hidden");
                } else if (currentScrollY < lastScrollY - 20) {
                    // Scrolling up a bit (20px threshold to avoid jitter)
                    filtersContainer.classList.remove("filters-hidden");
                }

                lastScrollY = currentScrollY;
            },
            { passive: true },
        );
    </script>
</Layout>

<style>
    .annotations {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }
    .annot-footer {
        margin-top: 1.5rem;
        padding-top: 0.75rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        font-size: 0.8rem;
        color: var(--text-secondary);
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        gap: 1rem;
        flex-wrap: wrap;
    }
    .footer-left {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
        flex: 1;
        min-width: 140px;
    }
    .chapter-title {
        font-weight: 600;
        color: var(--text-primary);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%;
    }
    .progress-wrapper {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .progress-bar-bg {
        width: 100px;
        height: 4px;
        background: rgba(127, 127, 127, 0.2);
        border-radius: 2px;
        overflow: hidden;
        flex-shrink: 0;
    }
    .progress-bar-fill {
        height: 100%;
    }
    .progress-text {
        font-size: 0.75rem;
        font-weight: 500;
        opacity: 0.8;
    }
    .footer-right {
        text-align: right;
        display: flex;
        flex-direction: column;
        gap: 0.15rem;
        flex-shrink: 0;
        font-size: 0.7rem;
        opacity: 0.6;
    }
</style>
