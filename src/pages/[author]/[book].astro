---
import Layout from "../../layouts/Layout.astro";
import { getGroupedAnnotations } from "../../db";

export function getStaticPaths() {
    const tree = getGroupedAnnotations();
    const paths = [];

    for (const author of Object.keys(tree)) {
        for (const book of Object.keys(tree[author])) {
            paths.push({
                params: { author, book },
                props: { annotations: tree[author][book] },
            });
        }
    }
    return paths;
}

const { author, book } = Astro.params;
const { annotations } = Astro.props;

const colorMap: Record<string, string> = {
    "3": "var(--highlight-green)",
    "2": "var(--highlight-blue)",
    "1": "var(--highlight-pink)",
    "0": "var(--highlight-yellow)",
};

const bgMap: Record<string, string> = {
    "3": "var(--highlight-green-bg)",
    "2": "var(--highlight-blue-bg)",
    "1": "var(--highlight-pink-bg)",
    "0": "var(--highlight-yellow-bg)",
};

// Sort by chapter? They are already sorted by BookTitle then DateCreated in SQL.
// Usually that's good enough.
---

<Layout title={`${book} | Annotations`}>
    <a
        slot="back-button"
        href={`/${author}/`}
        style="font-size: 1.25rem; text-decoration: none; color: var(--text-secondary);"
        title={`Back to ${author}`}>&larr;</a
    >
    <span slot="header-title" class="header-context">{book}</span>

    <h1 style="margin-bottom: 0.15rem;">{book}</h1>
    <p style="color: var(--text-secondary); margin-bottom: 2rem;">
        by {author}
    </p>

    <div class="annotations">
        {
            annotations.map((annot) => {
                // Fix: 0 is falsy, so we must check for null/undefined explicitly
                const colorKey =
                    annot.Color !== null && annot.Color !== undefined
                        ? String(annot.Color)
                        : "none";

                let borderColor = colorMap[colorKey] || "var(--border-color)";
                let bgColor = bgMap[colorKey] || "rgba(255,255,255,0.02)";

                if (annot.Type === "markup") {
                    borderColor = "var(--highlight-markup)";
                    bgColor = "var(--highlight-markup-bg)";
                }

                return (
                    <div
                        class="card"
                        style={`border-left: 4px solid ${borderColor}; background: ${bgColor};`}
                    >
                        {/* Type Badge (Above Text) */}
                        <div style="margin-bottom: 0.75rem;">
                            <span style="text-transform: uppercase; font-size: 0.65rem; font-weight: 700; letter-spacing: 0.05em; opacity: 0.6; border: 1px solid var(--text-primary); padding: 2px 6px; border-radius: 4px;">
                                {annot.Type}
                            </span>
                        </div>

                        {/* Markup Image - For handwritten annotations */}
                        {annot.Type === "markup" && (
                            <div
                                class="markup-container"
                                style="margin-bottom: 2rem; border-radius: 8px; overflow: hidden; background: #f5f5f5; position: relative; width: 100%; line-height: 0;"
                            >
                                {/* Base Page Image (JPG) */}
                                <img
                                    src={`/markups/${annot.BookmarkID}.jpg`}
                                    alt="Page screenshot"
                                    style="width: 100%; height: auto; display: block;"
                                    loading="lazy"
                                />
                                {/* Annotation Overlay (SVG) */}
                                <img
                                    src={`/markups/${annot.BookmarkID}.svg`}
                                    alt="Handwritten notes"
                                    style="position: absolute; top: 0; left: 0; width: 100%; height: auto; mix-blend-mode: multiply; pointer-events: none;"
                                    loading="lazy"
                                />
                            </div>
                        )}

                        {annot.Text && (
                            <blockquote style="border: none; background: transparent; padding: 0; margin-bottom: 1rem; font-style: italic;">
                                "{annot.Text.trim()}"
                            </blockquote>
                        )}

                        {annot.Annotation && (
                            <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid rgba(255,255,255,0.1);">
                                <strong style="color: var(--accent); display: block; margin-bottom: 0.25rem;">
                                    Note:
                                </strong>
                                {annot.Annotation}
                            </div>
                        )}

                        <div class="annot-footer">
                            {/* Left: Chapter Info & Progress */}
                            <div class="footer-left">
                                {annot.ChapterTitle && (
                                    <div class="chapter-title">
                                        {annot.ChapterTitle}
                                    </div>
                                )}

                                {annot.ChapterProgress > 0 && (
                                    <div
                                        class="progress-wrapper"
                                        title={`Chapter Progress: ${Math.round(annot.ChapterProgress * 100)}%`}
                                    >
                                        <div class="progress-bar-bg">
                                            <div
                                                class="progress-bar-fill"
                                                style={`width: ${Math.round(annot.ChapterProgress * 100)}%; background: ${borderColor};`}
                                            />
                                        </div>
                                        <span class="progress-text">
                                            {Math.round(
                                                annot.ChapterProgress * 100,
                                            )}
                                            %
                                        </span>
                                    </div>
                                )}
                            </div>

                            {/* Right: Dates */}
                            <div class="footer-right">
                                <div title="Created">
                                    <span style="margin-right: 4px;">ðŸ“…</span>
                                    {(() => {
                                        let d = annot.DateCreated;
                                        if (d && !d.endsWith("Z")) d += "Z";
                                        return new Date(d).toLocaleDateString(
                                            undefined,
                                            {
                                                year: "numeric",
                                                month: "short",
                                                day: "numeric",
                                                hour: "2-digit",
                                                minute: "2-digit",
                                            },
                                        );
                                    })()}
                                </div>

                                {annot.DateModified &&
                                    annot.DateModified !==
                                        annot.DateCreated && (
                                        <div title="Modified">
                                            <span style="margin-right: 4px;">
                                                âœŽ
                                            </span>
                                            {(() => {
                                                let d = annot.DateModified!;
                                                if (d && !d.endsWith("Z"))
                                                    d += "Z";
                                                return new Date(
                                                    d,
                                                ).toLocaleDateString(
                                                    undefined,
                                                    {
                                                        year: "numeric",
                                                        month: "short",
                                                        day: "numeric",
                                                        hour: "2-digit",
                                                        minute: "2-digit",
                                                    },
                                                );
                                            })()}
                                        </div>
                                    )}
                            </div>
                        </div>
                    </div>
                );
            })
        }
    </div>
</Layout>

<style>
    .annotations {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
    }

    .annot-footer {
        margin-top: 1.5rem;
        padding-top: 0.75rem;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        font-size: 0.8rem;
        color: var(--text-secondary);
        display: flex;
        justify-content: space-between;
        align-items: flex-end;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .footer-left {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
        flex: 1;
        min-width: 140px;
    }

    .chapter-title {
        font-weight: 600;
        color: var(--text-primary);
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%;
    }

    .progress-wrapper {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .progress-bar-bg {
        width: 100px;
        height: 4px;
        background: rgba(127, 127, 127, 0.2);
        border-radius: 2px;
        overflow: hidden;
        flex-shrink: 0;
    }

    .progress-bar-fill {
        height: 100%;
    }

    .progress-text {
        font-size: 0.75rem;
        font-weight: 500;
        opacity: 0.8;
    }

    .footer-right {
        text-align: right;
        display: flex;
        flex-direction: column;
        gap: 0.15rem;
        flex-shrink: 0;
        font-size: 0.7rem;
        opacity: 0.6;
    }

    @media (max-width: 500px) {
        .annot-footer {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.75rem;
        }
        .footer-right {
            text-align: left;
            border-top: 1px solid rgba(255, 255, 255, 0.03);
            padding-top: 0.5rem;
            width: 100%;
        }
        .footer-left {
            width: 100%;
        }
    }
</style>
